{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "strictNullChecks": true,
    "module": "ESNext",              // Garante que o módulo seja compatível com o Node.js
    "moduleResolution": "node",      // Resolve os módulos de maneira que o Node entenda
    "target": "ESNext",              // Define que o código será compilado para ESNext
    "esModuleInterop": true,         // Habilita interoperabilidade com módulos CommonJS
    "skipLibCheck": true,            // Ignora checagem de tipos em bibliotecas
    "resolveJsonModule": true        // Permite importar arquivos JSON
  }
}
